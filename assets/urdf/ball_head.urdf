    <visual><origin xyz="0 0 -0.1" rpy="0 0 0"/>
      <geometry><cylinder radius="0.01" length="0.2"/></geometry>
    </visual>
  </link>
  <!-- ===== Joint 2 Part A (Pitch) ===== -->
  <joint name="joint_2_pitch" type="revolute">
    <parent link="torso"/>
    <child link="inter_2"/>
