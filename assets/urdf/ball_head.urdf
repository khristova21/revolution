    <child link="inter_1"/>
    <origin xyz="0.050 -0.030 0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-0.2" upper="0.2" effort="1.0" velocity="2.0"/>
  </joint>

  <!-- ===== Joint 1 Part B (Yaw) ===== -->
  <joint name="joint_1_yaw" type="revolute">
    <parent link="inter_1"/>
    <child link="leg_1"/>
