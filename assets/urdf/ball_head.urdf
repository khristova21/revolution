  <!-- ===== Joint 2 Part B (Yaw) ===== -->
  <joint name="joint_2_yaw" type="revolute">
    <parent link="inter_2"/>
    <child link="leg_2"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
