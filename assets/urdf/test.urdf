<?xml version="1.0"?>
<robot name="caterpillar">

  <!-- ===== Link 0 (head) ===== -->
  <link name="segment_0_limb">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.10"/>
      <inertia ixx="2.0e-4" ixy="0"  ixz="0"
               iyy="2.0e-4" iyz="0"
               izz="1.0e-4"/>
    </inertial>

    <visual>
      <origin xyz="0 0 0" rpy="0 1.5708 0"/>
      <geometry>
        <capsule radius="0.02" length="0.06"/>
      </geometry>
      <material name="green">
        <color rgba="0.2 0.8 0.2 1"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 1.5708 0"/>
      <geometry>
        <capsule radius="0.02" length="0.06"/>
      </geometry>
    </collision>
  </link>

  <!-- ===== Link 1 ===== -->
  <link name="segment_1_torso">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.10"/>
      <inertia ixx="2.0e-4" ixy="0"  ixz="0"
               iyy="2.0e-4" iyz="0"
               izz="1.0e-4"/>
    </inertial>

    <visual>
      <origin xyz="0 0 0" rpy="0 1.5708 0"/>
      <geometry>
        <capsule radius="0.02" length="0.06"/>
      </geometry>
      <material name="green"/>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 1.5708 0"/>
      <geometry>
        <capsule radius="0.02" length="0.06"/>
      </geometry>
    </collision>
  </link>

  <!-- ===== Link 2 ===== -->
  <link name="segment_2_limb">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.10"/>
      <inertia ixx="2.0e-4" ixy="0"  ixz="0"
               iyy="2.0e-4" iyz="0"
               izz="1.0e-4"/>
    </inertial>

    <visual>
      <origin xyz="0 0 0" rpy="0 1.5708 0"/>
      <geometry>
        <capsule radius="0.02" length="0.06"/>
      </geometry>
      <material name="green"/>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 1.5708 0"/>
      <geometry>
        <capsule radius="0.02" length="0.06"/>
      </geometry>
    </collision>
  </link>

  <!-- ===== Link 3 (tail) ===== -->
  <link name="segment_3_limb">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.10"/>
      <inertia ixx="2.0e-4" ixy="0"  ixz="0"
               iyy="2.0e-4" iyz="0"
               izz="1.0e-4"/>
    </inertial>

    <visual>
      <origin xyz="0 0 0" rpy="0 1.5708 0"/>
      <geometry>
        <capsule radius="0.02" length="0.06"/>
      </geometry>
      <material name="green"/>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 1.5708 0"/>
      <geometry>
        <capsule radius="0.02" length="0.06"/>
      </geometry>
    </collision>
  </link>

  <!-- ===== Joint 1 ===== -->
  <joint name="joint_0_1" type="revolute">
    <!-- connects segment_0 (parent) to segment_1 (child) -->
    <parent link="segment_0_limb"/>
    <child  link="segment_1_torso"/>
    <!-- joint frame sits at tail of parent capsule -->
    <origin xyz="0.06 0 0" rpy="0 0 0"/>
    <!-- bend up/down around local z-axis -->
    <axis xyz="0 0 1"/>
    <limit lower="-1.57" upper="1.57" effort="1.0" velocity="2.0"/>
  </joint>

  <!-- ===== Joint 2 ===== -->
  <joint name="joint_1_2" type="revolute">
    <parent link="segment_1_torso"/>
    <child  link="segment_2_limb"/>
    <origin xyz="0.06 0 0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-1.57" upper="1.57" effort="1.0" velocity="2.0"/>
  </joint>

  <!-- ===== Joint 3 ===== -->
  <joint name="joint_2_3" type="revolute">
    <parent link="segment_2_limb"/>
    <child  link="segment_3_limb"/>
    <origin xyz="0.06 0 0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-1.57" upper="1.57" effort="1.0" velocity="2.0"/>
  </joint>

</robot>
